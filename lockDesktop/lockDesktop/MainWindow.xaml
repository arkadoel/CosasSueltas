        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lockDesktop"
        mc:Ignorable="d" Background="Gainsboro"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded" Deactivated="Window_Deactivated"
        WindowStyle="None" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="False" WindowStartupLocation="CenterScreen"
        >
    <Grid>

        <Image Source="pack://siteoforigin:,,,/Resources/Anotación 2020-01-14 173230.png"/>
        <Button Name="btnok" Background="Transparent" BorderBrush="{x:Null}" BorderThickness="0" Content="_" HorizontalAlignment="Left" Margin="42,13,0,0" VerticalAlignment="Top" Width="32" Click="Button_Click" Height="17"/>

        <PasswordBox x:Name="txtPass" Margin="6,3,0,0" Background="Transparent" Foreground="White" Height="35" VerticalAlignment="Top" HorizontalAlignment="Left" Width="34" BorderBrush="{x:Null}"/>
    </Grid>
</Window>
